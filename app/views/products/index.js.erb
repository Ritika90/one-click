<% if params[:type] == 'free' %>
	$("#free").html("<%= escape_javascript(render partial: 'product', locals: {products: @free_products, product_type: 'free'})%>");
	$(".nav-link").removeClass("active");
	$(".tab-pane").removeClass("show active");
	$(".free").addClass("active");
	$(".free_details").addClass("show active");
<% end %>

